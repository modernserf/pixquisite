  },
  "homepage": "https://github.com/modernserf/pixquisite#readme",
  "devDependencies": {
    "browserify": "^14.0.0",
    "ecstatic": "^2.1.0",
    "eslint": "^3.14.1",
    "eslint-config-prettier": "^1.0.2",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-prettier": "^2.0.0",
    "eslint-plugin-react": "^6.7.1",
    "rollupify": "^0.3.9",
    "watchify": "^3.9.0"
  },
  "dependencies": {
    "base64-js": "^1.1.2",
    "preact": "^7.2.0",
    "preact-redux": "^2.0.0",
    "prettier": "^0.14.1",
    "redeclare": "^0.2.0",
    "redux": "^3.3.1",
    "redux-thunk": "^2.2.0",
    "reselect": "^2.0.3"
  },
  "scripts": {
    "build": "browserify -t rollupify src/play.js > public/play.js && browserify -t rollupify src/watch.js > public/watch.js",
    "watch": "watchify -t rollupify src/play.js -o public/play.js  -dv & watchify -t rollupify src/watch.js -o public/watch.js  -dv",
    "serve": "ecstatic public -p 3000 --cache 0",
    "start": "npm run serve & npm run watch",
    "deploy": ". deploy.sh",
    "lint": "eslint src/"
  }
}
